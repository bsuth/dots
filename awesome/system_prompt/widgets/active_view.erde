local wibox = require('wibox')
local store = require('system_prompt.store')

local root_widget = wibox.widget({
  widget = wibox.container.place,
})

local function update_widget() {
  if store.active_view {
    root_widget.children = { store.active_view.root_widget }
  } else {
    root_widget.children = {}
  }
}

update_widget()
store:subscribe('change_active_view', update_widget)

return root_widget
