local ENV_DOTS = os.getenv('DOTS')

module function get_full_asset_path(path) {
  return "{ENV_DOTS}/awesome/assets/{path}"
}

module function hex2rgb(hex) {
  hex = hex:gsub('#', '')
  return {
    tonumber('0x' .. hex:sub(1, 2)) / 255,
    tonumber('0x' .. hex:sub(3, 4)) / 255,
    tonumber('0x' .. hex:sub(5, 6)) / 255,
  }
}
