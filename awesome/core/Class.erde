local Object = require('core.Object')

-- -----------------------------------------------------------------------------
-- Class
-- -----------------------------------------------------------------------------

local ClassMT = {}
local Class = setmetatable({}, ClassMT)

-- -----------------------------------------------------------------------------
-- Constructor
-- -----------------------------------------------------------------------------

local InstanceMT = { __call = (...) => Object(self, ...) }

function ClassMT:__call(instance = {}) {
  return setmetatable(instance, InstanceMT)
}

-- -----------------------------------------------------------------------------
-- Return
-- -----------------------------------------------------------------------------

return Class
