#!/bin/bash

# ------------------------------------------------------------------------------
# X SETUP
# ------------------------------------------------------------------------------

[[ -f $HOME/.Xmodmap ]] && xmodmap "$HOME/.Xmodmap"

# ------------------------------------------------------------------------------
# SYSTEM STARTUP PROGRAMS
# ------------------------------------------------------------------------------

if [ -d /etc/X11/xinit/xinitrc.d ] ; then
    for f in /etc/X11/xinit/xinitrc.d/?*.sh ; do
        [[ -x "$f" ]] && . "$f"
    done
    unset f
fi

# ------------------------------------------------------------------------------
# USER STARTUP PROGRAMS
# ------------------------------------------------------------------------------

fcitx &
udiskie &
compton -b
eval $(ssh-agent)

# ------------------------------------------------------------------------------
# AWESOME
# ------------------------------------------------------------------------------

exec awesome -c ~/.config/awesome/rc.lua
