set guioptions ''
set statusbar-home-tilde true


# -------------------------------------
# KEYBINDINGS
# -------------------------------------

map [normal] d scroll half-down
map [normal] u scroll half-up
map [normal] <C-d> toggle_page_mode 2
map [normal] <C-r> reload
map [normal] <C-h> toggle_statusbar
map [normal] b adjust_window best-fit
map [normal] w adjust_window width
