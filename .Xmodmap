! ------------------------------------------------------------------------------
! Regular Keyboard Settings 
!
! 1) Swap Control_L <-> Caps_Lock
! 2) Swap Alt_R <-> Super_R
! ------------------------------------------------------------------------------

! clear Lock
! clear Control
! clear Mod1
! clear Mod4

! keycode 37 = Caps_Lock
! keycode 66 = Control_L
! keycode 108 = Super_R
! keycode 134 = Alt_R

! add Lock = Caps_Lock
! add Control = Control_L Control_R
! add Mod1 = Alt_R Alt_L
! add Mod4 = Super_R Super_L

! ------------------------------------------------------------------------------
! HHKB Settings
!
! 1) Remap Alt_R -> Control_R
! 2) Swap Alt_L <-> Super_L
! ------------------------------------------------------------------------------

clear Control
clear Mod1
clear Mod4

keycode 108 = Control_R
keycode 133 = Alt_L
keycode 64 = Super_L

add Control = Control_L Control_R
add Mod1 = Alt_L Alt_R
add Mod4 = Super_L Super_R
