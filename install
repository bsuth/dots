#!/usr/bin/env bash

# ------------------------------------------------------------------------------
# - ENVIRONMENT
# - Note: this is necessary if we haven't linked our zshrc or zprofile yet!
# ------------------------------------------------------------------------------

DOTS="$HOME/dots"

# -------------------------------------
# - X11
# -------------------------------------

ln -sf "$DOTS/Xmodmap" "$HOME/.Xmodmap"
ln -sf "$DOTS/xinitrc" "$HOME/.xinitrc"

# -------------------------------------
# - ZSH
# -------------------------------------

ln -sf "$DOTS/zprofile" "$HOME/.zprofile"
ln -sf "$DOTS/zshrc" "$HOME/.zshrc"

# ------------------------------------------------------------------------------
# - AWESOME
# ------------------------------------------------------------------------------

ln -sfn "$DOTS/awesome" "$XDG_CONFIG_HOME/awesome"

# ------------------------------------------------------------------------------
# - NVIM
# ------------------------------------------------------------------------------

ln -sfn "$DOTS/nvim" "$XDG_CONFIG_HOME/nvim"

# ------------------------------------------------------------------------------
# - VIFM
# ------------------------------------------------------------------------------

ln -sfn "$DOTS/vifm" "$XDG_CONFIG_HOME/vifm"

# ------------------------------------------------------------------------------
# - QUTEBROWSER
# ------------------------------------------------------------------------------

ln -sfn "$DOTS/qutebrowser" "$XDG_CONFIG_HOME/qutebrowser"

# ------------------------------------------------------------------------------
# - ALACRITTY
# ------------------------------------------------------------------------------

ln -sfn "$DOTS/alacritty" "$XDG_CONFIG_HOME/alacritty"

# ------------------------------------------------------------------------------
# - ROFI
# ------------------------------------------------------------------------------

# ln -sfn "$DOTS/rofi" "$XDG_CONFIG_HOME/rofi"

# ------------------------------------------------------------------------------
# - MIMELIST
# ------------------------------------------------------------------------------

# ln -sf "$DOTS/mimeapps.list" "$XDG_CONFIG_HOME/mimeapps.list"

# -------------------------------------
# - SYSTEMD UNITS
# -------------------------------------

sudo ln -sf "$DOTS/services/physlock.service" "/etc/systemd/system/physlock.service"
