#!/usr/bin/env bash


# -------------------------------------
# - ENVIRONMENT
# - Note: this is necessary, since we haven't linked our bashrc or profile yet!
# -------------------------------------

DOTS_CORE="$HOME/dots/core"


# -------------------------------------
# - SYMLINKS
# -------------------------------------

# X11
ln -sf "$DOTS_CORE/.Xmodmap" "$HOME/.Xmodmap"
ln -sf "$DOTS_CORE/.xsession" "$HOME/.xsession"

# bash
ln -sf "$DOTS_CORE/.profile" "$HOME/.profile"
ln -sf "$DOTS_CORE/.bashrc" "$HOME/.bashrc"

# zsh
ln -sf "$DOTS_CORE/.zprofile" "$HOME/.zprofile"
ln -sf "$DOTS_CORE/.zshrc" "$HOME/.zshrc"
ln -sf "$DOTS_CORE/starship.toml" "$XDG_CONFIG_HOME/starship.toml"

# awesome
rm -rf "$XDG_CONFIG_HOME/awesome"
ln -sfn "$DOTS_CORE/awesome" "$XDG_CONFIG_HOME/awesome"

# nvim
ln -sf  "$DOTS_CORE/nvim/init.vim" "$XDG_CONFIG_HOME/nvim/init.vim"
ln -sf  "$DOTS_CORE/nvim/settings.vim" "$XDG_CONFIG_HOME/nvim/settings.vim"
ln -sf  "$DOTS_CORE/nvim/plugins.vim" "$XDG_CONFIG_HOME/nvim/plugins.vim"
ln -sf  "$DOTS_CORE/nvim/mappings.vim" "$XDG_CONFIG_HOME/nvim/mappings.vim"
ln -sf  "$DOTS_CORE/nvim/augroups.vim" "$XDG_CONFIG_HOME/nvim/augroups.vim"

# vifm
ln -sf  "$DOTS_CORE/vifm/vifmrc" "$XDG_CONFIG_HOME/vifm/vifmrc"
ln -sf  "$DOTS_CORE/vifm/scripts" "$XDG_CONFIG_HOME/vifm/scripts"
ln -sf  "$DOTS_CORE/vifm/colors" "$XDG_CONFIG_HOME/vifm/colors"

# alacritty
rm -rf "$XDG_CONFIG_HOME/alacritty"
ln -sfn "$DOTS_CORE/alacritty" "$XDG_CONFIG_HOME/alacritty"


# -------------------------------------
# - SYSTEMD UNITS
# -------------------------------------

sudo ln -sf "$DOTS_CORE/systemd/slock.service" "/etc/systemd/system/slock.service"
sudo systemctl enable slock.service
sudo systemctl start slock.service
