#!/usr/bin/env bash


# -------------------------------------
# - ENVIRONMENT
# - Note: this is necessary, since we haven't linked our bashrc or profile yet!
# -------------------------------------

DOTS="$HOME/dots"


# -------------------------------------
# - SYMLINKS
# -------------------------------------

# X11
ln -sf "$DOTS/Xmodmap" "$HOME/.Xmodmap"
ln -sf "$DOTS/xinitrc" "$HOME/.xinitrc"

# zsh
ln -sf "$DOTS/zprofile" "$HOME/.zprofile"
ln -sf "$DOTS/zshrc" "$HOME/.zshrc"
ln -sf "$DOTS/starship.toml" "$XDG_CONFIG_HOME/starship.toml"

# awesome
ln -sfn "$DOTS/awesome" "$XDG_CONFIG_HOME/awesome"

# nvim
ln -sf  "$DOTS/nvim/init.vim" "$XDG_CONFIG_HOME/nvim/init.vim"
ln -sf  "$DOTS/nvim/plugins.vim" "$XDG_CONFIG_HOME/nvim/plugins.vim"
ln -sf  "$DOTS/nvim/mappings.vim" "$XDG_CONFIG_HOME/nvim/mappings.vim"
ln -sf  "$DOTS/nvim/augroups.vim" "$XDG_CONFIG_HOME/nvim/augroups.vim"

# vifm
ln -sf  "$DOTS/vifm/vifmrc" "$XDG_CONFIG_HOME/nvim/vifmrc"
ln -sf  "$DOTS/vifm/colors" "$XDG_CONFIG_HOME/nvim/colors"
ln -sf  "$DOTS/vifm/scripts" "$XDG_CONFIG_HOME/nvim/scripts"

# alacritty
ln -sfn "$DOTS/alacritty" "$XDG_CONFIG_HOME/alacritty"


# -------------------------------------
# - SYSTEMD UNITS
# -------------------------------------

#sudo ln -sf "$DOTS/systemd/slock.service" "/etc/systemd/system/slock.service"
#sudo systemctl enable slock.service
#sudo systemctl start slock.service
