alias single='~/.screenlayout/single.sh'
alias double='~/.screenlayout/double.sh'

function load_erde() {
  ERDE_ROOT="$HOME/repos/erde"
  if [[ $LUA_PATH != *"$ERDE_ROOT"* ]]; then
    LUA_PATH="$ERDE_ROOT/?.lua;$ERDE_ROOT/?/init.lua;$LUA_PATH"
  fi
}

function erde() {
  load_erde
  $HOME/repos/erde/bin/erde $@
}
