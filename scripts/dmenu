#/usr/bin/env bash

declare -A commands

commands=(
    [firefox]="firefox"
    [awesome]="st -e vifm $DOTS_CORE/awesome"
    [vifm]="st -e vifm $DOTS_CORE/vifm"
    [sleep]="$SCRIPTS_CORE/sleep.sh"
    [reboot]="reboot"
    [poweroff]="poweroff"
)

key=$(echo "${!commands[@]}" | tr " " "\n" | dmenu)
eval "${commands[$key]}" & disown
